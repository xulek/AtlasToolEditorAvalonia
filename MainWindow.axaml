<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AtlasToolEditorAvalonia"
        x:Class="AtlasToolEditorAvalonia.MainWindow"
        Title="Atlas Tool Editor" Width="800" Height="600"
        KeyDown="Window_KeyDown">
  <DockPanel>
    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5" Spacing="5">
      <Button x:Name="LoadImageButton" Content="Load Image"/>
      <Button x:Name="SaveJsonButton" Content="Save JSON"/>
      <Button x:Name="LoadJsonButton" Content="Load JSON"/>
      <Button x:Name="ClearButton" Content="Clear"/>
      <Button x:Name="ZoomInButton" Content="Zoom +"/>
      <Button x:Name="ZoomOutButton" Content="Zoom -"/>
      <Button x:Name="ArrangeButton" Content="Arrange"/>
    </StackPanel>
    <local:AtlasCanvas x:Name="AtlasCanvasControl" />
  </DockPanel>
</Window>
