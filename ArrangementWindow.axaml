<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AtlasToolEditorAvalonia"
        x:Class="AtlasToolEditorAvalonia.ArrangementWindow"
        Title="Arrangement Window" Width="1400" Height="800">
  <DockPanel>
    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Spacing="10" Margin="10">
      <Button x:Name="LoadArrangementButton" Content="Load Arrangement"/>
      <Button x:Name="SaveArrangementButton" Content="Save Arrangement"/>
      <Button x:Name="UndoButton" Content="Undo"/>
    </StackPanel>
    <local:ArrangementCanvas x:Name="ArrangementCanvasControl" />
  </DockPanel>
</Window>
