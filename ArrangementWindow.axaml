<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AtlasToolEditorAvalonia"
        x:Class="AtlasToolEditorAvalonia.ArrangementWindow"
        Title="Arrangement Window" Width="1280" Height="720">
  <DockPanel>
    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10" Spacing="5">
      <Button x:Name="LoadArrangementButton" Content="Load Arrangement" Margin="0,0,5,0"/>
      <Button x:Name="SaveArrangementButton" Content="Save Arrangement" Margin="0,0,5,0"/>
      <Button x:Name="UndoButton" Content="Undo"/>
    </StackPanel>
    
    <ScrollViewer DockPanel.Dock="Left" Width="200" VerticalScrollBarVisibility="Auto">
      <ListBox x:Name="TextureList"/>
    </ScrollViewer>
    
    <local:ArrangementCanvas x:Name="ArrangementCanvasControl"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"/>
  </DockPanel>
</Window>
